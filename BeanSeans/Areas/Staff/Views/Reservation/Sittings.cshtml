@model IEnumerable<BeanSeans.Data.Sitting>

@{
    ViewData["Title"] = "Staff Sittings";
}

<title>Sittings View</title>

<h1 class="display-4">Please select a date for your reservation</h1>

<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SittingType)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Start)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.End)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SittingType.Name)
                </td>

                <td>
                    @item.Start.ToString("MM/dd/yyyy hh:mm tt")
                </td>
                <td>
                    @item.End.ToString("MM/dd/yyyy hh:mm tt")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>


                <td>

                    <a asp-action="CreateMemberReservation" asp-route-id="@item.Id">New Member Reservation</a>
                    <br />
                    <a asp-action="Create" asp-controller="reservation" asp-area="" asp-route-id="@item.Id">New Guest Reservation</a>

                </td>
            </tr>
        }
    </tbody>
</table>
