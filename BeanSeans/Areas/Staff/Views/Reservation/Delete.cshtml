@model BeanSeans.Data.Reservation

@{
    ViewData["Title"] = "Delete";
}
<br/>

<h1 class="display-4">Delete</h1>
<br />
<h3>Are you sure you want to delete this?</h3>
<h5 >Details of Reservation Id:@Model.Id  </h5>


<div>

    <dl class="row">
        <dt class="col-sm-2">
            Sitting Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sitting.SittingType.Name)
        </dd>

        <dt class="col-sm-2">Person Name</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Person.FirstName)
            @Html.DisplayFor(model => model.Person.LastName)

        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status.Name)
        </dd>
        <dt class="col-sm-2">
            Reservation Source
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Source.Name)
        </dd>
        <dt class="col-sm-2">
            Reserved Table(s)
        </dt>
        <dd class="col-sm-10">
            @for (int i = 0; i < Model.TableReservations.ToArray().Length; i++)
            {
                <div>
                    @Html.DisplayFor(model => model.TableReservations[i].Table.Name)

                </div>
            }
        </dd>
        <dt class="col-sm-2">
            Guest
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Guest)
        </dd>
        <dt class="col-sm-2">
            Start Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt class="col-sm-2">
            End Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndTime)
        </dd>
        <dt class="col-sm-2">
            Notes
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index">Back to List</a>
</form>